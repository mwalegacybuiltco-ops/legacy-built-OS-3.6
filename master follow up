<script>
  document.querySelectorAll('#subtabs button').forEach(b=>b.addEventListener('click',()=>{
    document.querySelectorAll('#subtabs button').forEach(x=>x.classList.remove('active'));
    b.classList.add('active');
    document.querySelectorAll('.pane').forEach(p=>p.classList.remove('show'));
    document.getElementById(b.dataset.pane).classList.add('show');
  }));
  function attachCopy(){
    document.querySelectorAll('.dm .copy').forEach(btn=>{
      btn.addEventListener('click',()=>{
        const txt = btn.parentElement.innerText.replace('Copy\n','').trim();
        navigator.clipboard.writeText(txt);
        btn.textContent='Copied âœ“';
        setTimeout(()=>btn.textContent='Copy',1200);
      });
    });
  }
  attachCopy();
</script>
